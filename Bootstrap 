script.js
 function searchDoces() {
    // Declarações de variáveis
    var input, filter, table, tr, td, i, txtValue;
    input = document.getElementById("searchInput");
    filter = input.value.toUpperCase();
    table = document.getElementById("docesTable");
    tr = table.getElementsByTagName("tr");

    // Loop em todas as linhas da tabela e oculta as que não correspondem à consulta de pesquisa
    for (i = 1; i < tr.length; i++) { // Começa de 1 para pular o cabeçalho
        tr[i].style.display = "none"; // Esconde a linha inicialmente

        td = tr[i].getElementsByTagName("td");
        for (var j = 0; j < td.length; j++) {
            if (td[j]) {
                txtValue = td[j].textContent || td[j].innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = ""; // Mostra a linha se a busca corresponder
                    break; // Para de checar outras células na linha
                }
            }
        }
    }
}

function toggleMenu() {
    var menu = document.getElementById("menu");
    if (menu.style.display === "block") {
        menu.style.display = "none";
    } else {
        menu.style.display = "block";
    }
}