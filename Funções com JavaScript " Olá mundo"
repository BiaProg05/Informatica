function mostrarMensagem() {
    console.log("Olá, Mundo!!!");
}

// Chamar a função para mostrar a mensagem
mostrarMensagem();

function converterRealParaDolar(valorEmReais) {
    const taxaDeCambio = 5; // 1 dólar = 5 reais
    const valorEmDolares = valorEmReais / taxaDeCambio;
    console.log(`O valor de R$ ${valorEmReais.toFixed(2)} corresponde a $ ${valorEmDolares.toFixed(2)}.`);
}

// Exemplo de uso da função
let valorReais = 50; // você pode alterar este valor para testar com diferentes entradas
converterRealParaDolar(valorReais);

sh
node helloWorld.js
node converterRealParaDolar.js

